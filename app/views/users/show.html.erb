<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <li><%= link_to "edit" , edit_user_path(@user) %> </li>
      </h1>
    </section>
    
    <!-- 必ずしもフォローやフォロワーの数を表示などは表示させなくてもいいと思います。-->
